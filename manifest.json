{
  "manifest_version": 3,
  "name": "FilterIt",
  "description": "Base Level Extension for FilterIt",
  "version": "0.2",
  "action": {
    "default_popup": "main.html",
    "default_icon": "filteritlogo.png"
  },
  
  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["activeTab", "scripting"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
  
}